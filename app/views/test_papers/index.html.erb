<div class="container-fluid mt-4">
  <h1>Test Papers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date to take test</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @test_papers.each do |test_paper| %>
        <tr>
          <td><%= test_paper.name %></td>
          <td><%= test_paper.date_to_take_test %></td>
          <% if user_signed_in? %>
            <td><%= link_to 'Show', test_paper, class: "btn btn-info" %></td>
          <% else %>
            <td><%= link_to 'Show', test_paper, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_test_paper_path(test_paper), class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', test_paper, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Test Paper', new_test_paper_path, class: "btn btn-success" if !user_signed_in? %>
</div>