<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <div class="card custom-card">
        <div class="card-body">
          <%= form_for :user_response, url: '#', method: :post do |f| %>
            <% @test_paper.multiple_choice_questions.each do |mcq| %>
              <label><%= mcq.question %></label>
              <% mcq.mcq_options.each do |mcq_opt| %>
                <div class="form-group">
                  <%= f.radio_button mcq.question, mcq_opt.option %>
                  <%= f.label mcq_opt.option %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <% total_questions = @test_paper.multiple_choice_questions.count %>
      <% total_questions.times do |i| %>
        <button><%= i+1 %></button>
      <% end %>
    </div>
  </div>
</div>

<style type="text/css">
  .custom-card {
    border-radius:0px;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)!important;
  }
</style>