<div class="container">
  <div class="col-md-8 offset-md-2">
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Name:</strong>
      <%= @test_paper.name %>
    </p>
    <p>
      <strong>Date to take test:</strong>
      <%= @test_paper.date_to_take_test %>
    </p>

    <%= link_to 'Edit', edit_test_paper_path(@test_paper), class: "btn btn-secondary btn-lg" %> 

    <%= link_to 'Back', test_papers_path, class: "btn btn-primary btn-lg" %>

    <%= link_to 'Start Test', start_test_paper_test_paper_path(@test_paper), class: "btn btn-info btn-lg", method: :post %>
  </div>
</div>
