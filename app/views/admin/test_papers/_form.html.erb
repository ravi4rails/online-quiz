<%= form_for [:admin, @test_paper] do |f| %>
  <% if @test_paper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@test_paper.errors.count, "error") %> prohibited this test_paper from being saved:</h2>

      <ul>
      <% @test_paper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date_to_take_test %>
    <%= f.date_field :date_to_take_test, class: "form-control" %>
  </div>

  <div id="multiple_choice_questions" class="nested-form-area">
    <%= f.fields_for :multiple_choice_questions do |mcq| %>
      <%= render 'multiple_choice_question_fields', f: mcq %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add MCQ', f, :multiple_choice_questions, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success btn-lg mt-4 mb-3" %>
  </div>
<% end %>
