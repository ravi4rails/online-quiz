<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-4">
      <h3>Test Papers  <button class="btn btn-default"><%= @test_papers.count %></button></h3>
    </div>
    <div class="col-md-4">
       <h3>Total Users  <button class="btn btn-default"><%= User.count %></button></h3>
    </div>
    <div class="col-md-4">
      <%= link_to "Logout", destroy_admin_session_path, method: :delete, class: "btn btn-danger float-right" if admin_signed_in? %>
    </div>
  </div>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date to take test</th>
        <th>Total Submissions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @test_papers.each do |test_paper| %>
        <tr>
          <td><%= test_paper.name %></td>
          <td><%= test_paper.date_to_take_test %></td>
          <td><%= test_paper.submissions.count %></td>
          <td><%= link_to 'Show', admin_test_paper_path(test_paper), class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_admin_test_paper_path(test_paper), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', admin_test_paper_path(test_paper), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Test Paper', new_admin_test_paper_path, class: "btn btn-success" if admin_signed_in? %>
  <%= link_to admin_submissions_path, class: "btn btn-info" do %>
    View All Submission <span class="badge badge-warning"><%= Submission.count %></span>
  <% end %>
</div>