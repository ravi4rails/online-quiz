<div class="nested-fields">
  <div class="row">
    <div class="col-sm-7">
      <div class="form-group">
        <%= f.text_area :question, class: "form-control", placeholder: "Write Question Here", rows: "3" %>
      </div>
      <div class="form-group">
        <%= f.text_field :correct_answer, class: "form-control", placeholder: "Write correct answer Here" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group">
        <%= f.number_field :sequence_number, class: "form-control", placeholder: "Write S. No" %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-group">
        <%= link_to_remove_association "Remove MCQ", f, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <div id="mcq_options">
    <%= f.fields_for :mcq_options do |option| %>
      <%= render 'mcq_option_fields', f: option %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Option', f, :mcq_options, class: "btn btn-primary" %>
      <hr>
    </div>
  </div>
</div>