<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card">
        <div class="card-header bg-color">
          <h4>Log in</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                </div>
                <%= f.text_field :username, autofocus: true, autocomplete: "email" , class: "form-control",  "aria-describedby" => "basic-addon1", placeholder: "11111" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon2"><i class="fa fa-key"></i></span>
                </div>
                <%= f.password_field :password, autocomplete: "current-password" , class: "form-control password", "aria-describedby" => "basic-addon2", placeholder: "••••••" %>
              </div>
            </div>

            <%# if devise_mapping.rememberable? -%>
              <!-- <div class="form-group">
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              </div> -->
            <%# end -%>

            <div class="actions mt-5">
              <%= f.submit "Log in", class: "btn btn-primary btn-block float-right" %>
            </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<style type="text/css">
  .password::placeholder {
    font-size: 20px;
  }
</style>